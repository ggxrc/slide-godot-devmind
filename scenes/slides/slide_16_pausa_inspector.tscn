[sub_resource type="GDScript" id="GDScript_slider"]
script/source = "extends Node

@onready var slider = get_node_or_null(\"../MarginContainer/VBoxContainer/DemoContainer/ControlsPanel/SpeedSlider\")
@onready var value_label = get_node_or_null(\"../MarginContainer/VBoxContainer/DemoContainer/ControlsPanel/SpeedValue\")
@onready var player = get_node_or_null(\"../MarginContainer/VBoxContainer/DemoContainer/VisualDemo/Track/Player\")

var is_moving = true
var track_width = 360.0

func _ready():
	if slider:
		slider.value_changed.connect(_on_speed_changed)

func _process(delta):
	if is_moving and player and slider:
		var speed = slider.value
		player.position.x += speed * delta
		
		if player.position.x > track_width:
			player.position.x = 0

func _on_speed_changed(value: float):
	if not value_label:
		return
	value_label.text = \"speed = %d\" % value
	
	# Mudar cor baseado na velocidade
	if value < 300:
		value_label.add_theme_color_override(\"font_color\", Color(1, 0.5, 0.5))
	elif value < 700:
		value_label.add_theme_color_override(\"font_color\", Color(1, 1, 0.5))
	else:
		value_label.add_theme_color_override(\"font_color\", Color(0.5, 1, 0.5))
"

