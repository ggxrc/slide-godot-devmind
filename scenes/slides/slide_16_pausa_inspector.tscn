[sub_resource type="GDScript" id="GDScript_slider"]
script/source = "extends Node

@onready var slider: HSlider = get_node_or_null(\"../MarginContainer/VBoxContainer/DemoContainer/ControlsPanel/SpeedSlider\")
@onready var value_label: Label = get_node_or_null(\"../MarginContainer/VBoxContainer/DemoContainer/ControlsPanel/SpeedValue\")
@onready var player: AnimatedSprite2D = get_node_or_null(\"../MarginContainer/VBoxContainer/DemoContainer/VisualDemo/Track/Player\")
@onready var track: Panel = get_node_or_null(\"../MarginContainer/VBoxContainer/DemoContainer/VisualDemo/Track\")

var track_width: float = 400.0

func _ready():
	if slider:
		slider.value_changed.connect(_on_speed_changed)
		_on_speed_changed(slider.value)
	if player:
		player.play(\"run_01\")
	if track:
		track_width = track.size.x

func _process(delta):
	if player and slider:
		var speed = slider.value
		player.position.x += speed * delta
		
		# Quando sair da tela, volta pro inÃ­cio
		if player.position.x > track_width + 50:
			player.position.x = -50

func _on_speed_changed(value: float):
	if not value_label:
		return
	value_label.text = \"speed = %d\" % int(value)
	
	# Mudar cor baseado na velocidade
	if value < 300:
		value_label.add_theme_color_override(\"font_color\", Color(1, 0.5, 0.5))
	elif value < 700:
		value_label.add_theme_color_override(\"font_color\", Color(1, 1, 0.5))
	else:
		value_label.add_theme_color_override(\"font_color\", Color(0.5, 1, 0.5))
"

