script/source = "extends VBoxContainer

@onready var bullet = get_node_or_null(\"Content/Visual/Diagram/Bullet\")
@onready var enemy = get_node_or_null(\"Content/Visual/Diagram/Enemy\")
@onready var impact_label = get_node_or_null(\"Content/Visual/Diagram/Impact\")
@onready var status_label = get_node_or_null(\"Content/Visual/StatusLabel\")

var bullet_pos = 100.0
var enemy_pos = 400.0
var moving = true
var collision_happened = false
var waiting_to_reset = false

func _ready():
	if bullet:
		bullet.position.x = bullet_pos
	if enemy:
		enemy.position.x = enemy_pos
	if impact_label:
		impact_label.modulate.a = 0.0

func _process(delta):
	if not moving or waiting_to_reset:
		return
	
	if bullet and enemy:
		bullet_pos += 200 * delta
		bullet.position.x = bullet_pos
		
		var distance = abs(bullet_pos - enemy_pos)
		
		if distance < 50 and not collision_happened:
			collision_happened = true
			_show_collision()
			waiting_to_reset = true
			_reset_after_delay()
			return

func _reset_after_delay():
	await get_tree().create_timer(1.0).timeout
	bullet_pos = 100.0
	if bullet:
		bullet.position.x = bullet_pos
	collision_happened = false
	waiting_to_reset = false
	if impact_label:
		impact_label.modulate.a = 0.0
	if status_label:
		status_label.text = 'Tiro se aproximando...'

func _show_collision():
	if impact_label:
		impact_label.modulate.a = 1.0
	if status_label:
		status_label.text = 'ðŸ’¥ COLISÃƒO DETECTADA!'
	
	if enemy:
		var tween = create_tween()
		tween.tween_property(enemy, 'modulate:a', 0.3, 0.3)
		tween.tween_property(enemy, 'modulate:a', 1.0, 0.3)
"

