[sub_resource type="GDScript" id="GDScript_pause"]
script/source = "extends VBoxContainer

@onready var pause_button = get_node_or_null(\"DemoPanel/Controls/PauseButton\")
@onready var animated_sprite = get_node_or_null(\"DemoPanel/GameArea/AnimatedSprite2D\")
@onready var status_label = get_node_or_null(\"DemoPanel/Controls/Status\")
@onready var game_area = get_node_or_null(\"DemoPanel/GameArea\")

var is_paused = false
var move_speed = 200.0
var direction = 1

func _ready():
	if pause_button:
		pause_button.pressed.connect(_on_pause_pressed)
	
	if animated_sprite and game_area:
		animated_sprite.position.x = 50

func _process(delta):
	if is_paused or not animated_sprite or not game_area:
		return
	
	animated_sprite.position.x += direction * move_speed * delta
	
	# Reset position when reaches the edge
	if animated_sprite.position.x > game_area.size.x - 50:
		animated_sprite.position.x = 50

func _on_pause_pressed():
	is_paused = !is_paused
	
	if pause_button:
		if is_paused:
			pause_button.text = \"▶️ DESPAUSAR\"
		else:
			pause_button.text = \"⏸️ PAUSAR\"
	
	if status_label:
		if is_paused:
			status_label.text = \"Status: PAUSADO\"
			status_label.add_theme_color_override(\"font_color\", Color(0.8, 0.8, 0.4))
		else:
			status_label.text = \"Status: JOGANDO\"
			status_label.add_theme_color_override(\"font_color\", Color(0.4, 0.8, 0.4))
	
	if animated_sprite:
		if is_paused:
			animated_sprite.pause()
		else:
			animated_sprite.play()
"

